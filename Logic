#Calculator Logic

class Calculator:
    def __init__(self):
        pass

    def clickbut(number): 
        global operator
        operator = operator + str(number)
        textin.set(operator)

    def equalbut():
        error = "Error"
        global operator
        try:
            add=str(eval(operator))
            textin.set(add)
            operator= ""
            return int(add)

        except ZeroDivisionError:
            textin.set("MATH ERROR")
            operator = "" 
            return error
        except: 
            textin.set("ERROR")
            operator = "" 
            return error
        
    def clrALLbut():
        global operator
        textin.set("")
        operator=""

    def backspacebut():
        global operator
        operator=operator[:-1]
        textin.set(operator)
    
    
c = Calculator()



