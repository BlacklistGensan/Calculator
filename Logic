#Calculator Logic

def clickbut(number): 
    global operator
    operator = operator + str(number)
    textin.set(operator)


def equalbut() :
    try:
        global operator
        add=str(eval(operator))
        textin.set(add)
        operator= ""
    except: 
        textin.set("ERROR")
        operator = "" 
        
            
            
def subbut() :
    global operator
    sub=str(eval(operator))
    textin.set(sub)
    operator= ""

def mulbut() :
    global operator
    mul=str(eval(operator))
    textin.set(mul)
    operator= ""

def divbut() :
    global operator
    div=str(eval(operator))
    textin.set(div)
    operator= ""

def clrALLbut():
    global operator
    textin.set("")
    operator=""

def backspacebut():
    global operator
    operator=operator[:-1]
    textin.set(operator)



