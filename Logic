#Calculator Logic

class Calculator:

    def clickbut(self, number): 
        global operator
        operator = operator + str(number)
        textin.set(operator)

    def clickbut(self, number): 
        global operator
        operator = operator + str(number)
        textin.set(operator)

    def evaluate(self) :
        try:
            global operator
            input=str(eval(operator))
            textin.set(input)
            operator= ""
        except: 
            textin.set("ERROR")
            operator = "" 
        
    def clrALLbut():
        global operator
        textin.set("")
        operator=""

    def backspacebut():
        global operator
        operator=operator[:-1]
        textin.set(operator)
    
    
c = Calculator()



